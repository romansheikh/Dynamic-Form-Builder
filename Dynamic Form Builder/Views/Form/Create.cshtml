<!-- Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 w-50">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h4>Create Dynamic Form</h4>
        </div>
        <div class="card-body">
            <form method="post" id="dynamicForm">
                <div class="mb-3">
                    <label class="form-label">Form Title</label>
                    <input type="text" name="Title" class="form-control" placeholder="Enter Form Title" required />
                </div>

                <div id="fieldsContainer"></div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="button" class="btn btn-info" onclick="addDropdown()">➕ Add More</button>
                    <button type="submit" class="btn btn-success">✅ Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    let optionList = ["Option 1", "Option 2", "Option 3"];
    let index = 0;

    function addDropdown() {
        const container = document.getElementById('fieldsContainer');

        const fieldHTML = `
            <div class="mb-4 border rounded p-3 bg-light position-relative" id="field-${index}">
                <button type="button" class="btn-close position-absolute top-0 end-0 m-2" onclick="removeField(${index})" aria-label="Remove"></button>

                <div class="mb-2">
                    <label class="form-label">Label</label>
                    <input type="text" name="Fields[${index}].Label" class="form-control" placeholder="Field Label" required />
                </div>

                <div class="mb-2">
                    <label class="form-label">Options</label>
                    <select name="Fields[${index}].SelectedOption" class="form-select">
                        ${optionList.map(opt => `<option value="${opt}">${opt}</option>`).join('')}
                    </select>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="Fields[${index}].IsRequired" value="true" id="required${index}">
                    <label class="form-check-label" for="required${index}">Required</label>
                </div>
            </div>
        `;

        container.insertAdjacentHTML('beforeend', fieldHTML);
        index++;
    }

    function removeField(index) {
        const fieldDiv = document.getElementById(`field-${index}`);
        if (fieldDiv) {
            fieldDiv.remove();
        }
    }
</script>
