@model IEnumerable<Form>

@{
    ViewData["Title"] = "Saved Forms";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 w-75 border">
    <div class="d-flex justify-content-between align-items-center mb-3 bg-light p-2 rounded-1">
        <h2 class="text-primary">History</h2>
        <a href="@Url.Action("Create", "Form")" class="btn btn-success">
            <i class="bi bi-plus-lg me-1"></i> Create New Form
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle-fill me-1"></i> No forms created yet.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-success">
                <tr>
                    <th>Title</th>
                    <th>Created At</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var form in Model)
                {
                    <tr>
                        <td class="align-middle">@form.Title</td>
                        <td class="align-middle">@form.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-center align-middle">
                            <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Preview", "Form", new { id = form.FormId })">
                                <i class="bi bi-eye-fill me-1"></i> Preview
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
