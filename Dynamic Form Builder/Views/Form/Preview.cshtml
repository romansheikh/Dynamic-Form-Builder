<div class="container mt-5 w-50">
    <div class="card shadow border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Preview: @Model.Title</h4>
            <a href="/Form/Index" class="btn btn-outline-light btn-sm">← Back to List</a>
        </div>
        <div class="card-body">
            @if (Model.Fields != null && Model.Fields.Count > 0)
            {
                @foreach (var field in Model.Fields)
                {
                    <div class="mb-1 p-3 bg-light rounded border shadow-sm">
                        <label class="form-label fw-semibold">
                            @field.Label
                            @if (field.IsRequired)
                            {
                                <span class="text-danger">*</span>
                            }
                        </label>
                        <select class="form-select" disabled>
                            <option selected>@field.SelectedOption</option>
                        </select>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning text-center">No fields available in this form.</div>
            }
        </div>
    </div>
</div>

